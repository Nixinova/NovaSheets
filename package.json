{
    "name": "novasheets",
    "version": "1.0.0",
    "description": "A simple, powerful, and versatile CSS preprocessor",
    "keywords": [
        "novasheets",
        "nvss",
        "css",
        "css preprocessor",
        "css nesting",
        "nested css",
        "preprocessor",
        "stylesheets",
        "parser"
    ],
    "files": [
        "src/*.js",
        "src/*.d.ts",
        "!src/browser.*"
    ],
    "main": "src/index.js",
    "bin": {
        "novasheets": "src/cli.js"
    },
    "scripts": {
        "prepublish": "tsc",
        "lint": "eslint . --ignore-path .gitignore",
        "lint:fix": "eslint . --ignore-path .gitignore --fix",
        "build": "tsc && node build",
        "test": "tsc && qunit"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/NovaSheets/NovaSheets.git"
    },
    "bugs": {
        "url": "https://github.com/NovaSheets/NovaSheets/issues"
    },
    "author": "Nixinova (https://nixinova.com)",
    "homepage": "https://novasheets.js.org",
    "license": "ISC",
    "dependencies": {
        "balanced-match": "^2.0.0",
        "glob": "^7.1.7",
        "math-and-unit-parser": "1.3.6",
        "yargs-parser": "^20.2.9"
    },
    "devDependencies": {
        "@types/node": "ts4.3",
        "@typescript-eslint/eslint-plugin": "^4.28.1",
        "@typescript-eslint/parser": "^4.28.1",
        "browserify": "^17.0.0",
        "eslint": "^7.29.0",
        "qunit": "^2.16.0",
        "typescript": "~4.3.5",
        "uglify-js": "^3.13.10"
    }
}
